#include "/Engine/Public/Platform.ush"

#define float16_t half

// SlangAutoDiff technique, shader Init


struct Struct__Init_0CB
{
    int FrameIndex;
    float3 _padding0;
    float4 MouseState;
    float4 MouseStateLastFrame;
    int NumGaussians;
    float3 iResolution;
    uint initialized;
    float3 _padding1;
};

RWBuffer<float> Data;
int cb_Init_0CB_FrameIndex;
float3 cb_Init_0CB__padding0;
float4 cb_Init_0CB_MouseState;
float4 cb_Init_0CB_MouseStateLastFrame;
int cb_Init_0CB_NumGaussians;
float3 cb_Init_0CB_iResolution;
uint cb_Init_0CB_initialized;
float3 cb_Init_0CB__padding1;


static const float c_pi = 3.14159265359f;

uint wang_hash_init(uint3 seed)
{
	return uint(seed.x * uint(1973) + seed.y * uint(9277) + seed.z * uint(26699)) | uint(1);
}

uint wang_hash_uint(inout uint seed)
{
	seed = uint(seed ^ uint(61)) ^ uint(seed >> uint(16));
	seed *= uint(9);
	seed = seed ^ (seed >> 4);
	seed *= uint(0x27d4eb2d);
	seed = seed ^ (seed >> 15);
	return seed;
}

float wang_hash_float01(inout uint state)
{
	return float(wang_hash_uint(state) & 0x00FFFFFF) / float(0x01000000);
}

[numthreads(1, 1, 1)]
void csmain(uint3 DTid : SV_DispatchThreadID)
{
	// set the ball position on click
	float4 mouseState = cb_Init_0CB_MouseState;
	float4 mouseStateLastFrame = cb_Init_0CB_MouseStateLastFrame;
	if (mouseState.z && !mouseStateLastFrame.z)
	{
		float2 uv = mouseState.xy / cb_Init_0CB_iResolution.xy;
		Data[0] = uv.x;
		Data[1] = uv.y;
	}

	if((bool)cb_Init_0CB_initialized)
	{
		return;
	}

	uint rng = wang_hash_init(uint3(0x1337b4b3, 0xcafef00d, cb_Init_0CB_FrameIndex));
	
	// put the ball in the center
	Data[0] = 0.5f;
	Data[1] = 0.5f;

	// initialize gradient to 0
	Data[2] = 0.0f;
	Data[3] = 0.0f;

	for (int i = 0; i < cb_Init_0CB_NumGaussians; ++i)
	{
		// position
		Data[4+i*5+0] = wang_hash_float01(rng);
		Data[4+i*5+1] = wang_hash_float01(rng);

		// angle
		Data[4+i*5+2] = wang_hash_float01(rng) * 2.0f * c_pi;

		// sigma
		Data[4+i*5+3] = lerp(0.05f, 0.3f, wang_hash_float01(rng));
		Data[4+i*5+4] = lerp(0.05f, 0.3f, wang_hash_float01(rng));
	}
}

